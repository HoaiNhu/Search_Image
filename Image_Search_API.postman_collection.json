{
  "info": {
    "_postman_id": "image-search-api-collection",
    "name": "Image Search API",
    "description": "API collection for testing image search functionality using CLIP model",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/health",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "health"]
        },
        "description": "Check the health status of the image search API and see how many products are indexed."
      },
      "response": []
    },
    {
      "name": "Root Endpoint",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/",
          "host": ["{{base_url}}"],
          "path": [""]
        },
        "description": "Get API information and available endpoints."
      },
      "response": []
    },
    {
      "name": "Search by Image Upload",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": [],
              "description": "Image file to search for similar products (JPEG, PNG, etc.)"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/v1/search/image?top_k=5&threshold=0.5",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "search", "image"],
          "query": [
            {
              "key": "top_k",
              "value": "5",
              "description": "Number of results to return (1-50)"
            },
            {
              "key": "threshold",
              "value": "0.5",
              "description": "Minimum similarity threshold (0.0-1.0)"
            }
          ]
        },
        "description": "Upload an image file to search for similar products. Returns top K most similar products with similarity scores."
      },
      "response": []
    },
    {
      "name": "Search by Image Upload - High Threshold",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": [],
              "description": "Image file to search"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/v1/search/image?top_k=10&threshold=0.7",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "search", "image"],
          "query": [
            {
              "key": "top_k",
              "value": "10",
              "description": "Get top 10 results"
            },
            {
              "key": "threshold",
              "value": "0.7",
              "description": "Only very similar products (70%+)"
            }
          ]
        },
        "description": "Search with higher similarity threshold to get only very similar products."
      },
      "response": []
    },
    {
      "name": "Search by Image URL",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/search/url?image_url=https://res.cloudinary.com/dlyl41lgq/image/upload/v1735795001/products/file_u9ksse.jpg&top_k=5&threshold=0.5",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "search", "url"],
          "query": [
            {
              "key": "image_url",
              "value": "https://res.cloudinary.com/dlyl41lgq/image/upload/v1735795001/products/file_u9ksse.jpg",
              "description": "URL of the image to search (from your product database)"
            },
            {
              "key": "top_k",
              "value": "5",
              "description": "Number of results"
            },
            {
              "key": "threshold",
              "value": "0.5",
              "description": "Similarity threshold"
            }
          ]
        },
        "description": "Search for similar products using an image URL. Useful for testing with existing product images from Cloudinary."
      },
      "response": []
    },
    {
      "name": "Search by Custom URL",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/search/url?image_url={{test_image_url}}&top_k=10",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "search", "url"],
          "query": [
            {
              "key": "image_url",
              "value": "{{test_image_url}}",
              "description": "Set test_image_url variable with any image URL"
            },
            {
              "key": "top_k",
              "value": "10"
            }
          ]
        },
        "description": "Search using a custom image URL (set test_image_url variable in environment)."
      },
      "response": []
    },
    {
      "name": "Refresh Product Features",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/refresh",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "refresh"]
        },
        "description": "Refresh product features from MongoDB database. Call this endpoint when new products are added to re-index the database."
      },
      "response": []
    },
    {
      "name": "API Documentation",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/docs",
          "host": ["{{base_url}}"],
          "path": ["docs"]
        },
        "description": "Open Swagger UI documentation in browser."
      },
      "response": []
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [""]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "pm.test(\"Status code is 200\", function () {",
          "    pm.response.to.have.status(200);",
          "});",
          "",
          "pm.test(\"Response time is less than 5000ms\", function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8001",
      "type": "string"
    },
    {
      "key": "test_image_url",
      "value": "https://res.cloudinary.com/dlyl41lgq/image/upload/v1735795001/products/file_u9ksse.jpg",
      "type": "string"
    }
  ]
}
